<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    tools:context=".GraphicsActivity"
    tools:openDrawer="start">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:title="@string/daily_stats"
                app:titleTextColor="@color/Orange"
                tools:layout_editor_absoluteX="5dp" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/spinnerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="12dp"
                        android:hint="@string/select_district"
                        app:boxBackgroundColor="#fff"
                        app:boxStrokeColor="#f00"
                        app:boxStrokeWidth="2dp">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/districtTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:clickable="true"
                            android:textColor="#f00"
                            android:textColorHighlight="@color/Orange"
                            android:textSize="14sp"
                            tools:ignore="KeyboardInaccessibleWidget,SpeakableTextPresentCheck" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btnsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinnerLayout">


                    <Button
                        android:id="@+id/btnViewTable"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="0.33"
                        android:backgroundTint="@color/Orange"
                        android:elevation="2dp"
                        android:text="@string/mkeka"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:textSize="15sp"
                        app:cornerRadius="10dp" />
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnsLayout">


                    <View
                        android:layout_width="match_parent"
                        android:id="@+id/lineViewTop"
                        android:layout_marginTop="10dp"
                        android:layout_height="1dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/Orange">

                    </View>

                    <TextView
                        android:id="@+id/maximumPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/max_price"
                        android:layout_below="@+id/lineViewTop"
                        android:layout_alignParentStart="true"
                        android:textSize="14sp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/maxPriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lineViewTop"
                        android:layout_alignParentEnd="true"
                        android:textSize="14sp"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/white"
                        android:layout_toEndOf="@+id/maximumPrice"/>

                    <View
                        android:layout_width="match_parent"
                        android:id="@+id/lineView"
                        android:layout_marginTop="10dp"
                        android:layout_height="1dp"
                        android:layout_marginEnd="5dp"
                        android:layout_below="@+id/maximumPrice"
                        android:background="@color/Orange">

                    </View>

                    <TextView
                        android:id="@+id/minxPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lineView"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:text="@string/min_price"
                        android:textColor="@color/white"
                        android:layout_toEndOf="@+id/maximumPrice"/>

                    <TextView
                        android:id="@+id/minPriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/lineView"
                        android:textSize="14sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:layout_toEndOf="@+id/minxPrice"/>

                    <View
                        android:layout_width="match_parent"
                        android:id="@+id/lineView1"
                        android:layout_marginTop="10dp"
                        android:layout_height="1dp"
                        android:layout_marginEnd="5dp"
                        android:layout_below="@+id/minxPrice"
                        android:background="@color/Orange">

                    </View>

                    <TextView
                        android:id="@+id/avPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lineView1"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:text="@string/average_price"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/avPriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/lineView1"
                        android:layout_marginStart="20dp"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:layout_toEndOf="@+id/avPrice"/>
                    <View
                        android:layout_width="match_parent"
                        android:id="@+id/lineView2"
                        android:layout_marginTop="10dp"
                        android:layout_height="1dp"
                        android:layout_marginEnd="5dp"
                        android:layout_below="@+id/avPrice"
                        android:background="@color/Orange">

                    </View>

                    <TextView
                        android:id="@+id/sellers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lineView2"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="8dp"
                        android:textSize="14sp"
                        android:text="@string/total_sellers"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/sellersTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/lineView2"
                        android:layout_marginStart="20dp"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:layout_toEndOf="@+id/sellers"/>
                    <View
                        android:layout_width="match_parent"
                        android:id="@+id/lineView3"
                        android:layout_marginTop="10dp"
                        android:layout_height="1dp"
                        android:layout_marginEnd="5dp"
                        android:layout_below="@+id/sellers"
                        android:background="@color/Orange">

                    </View>

                    <TextView
                        android:id="@+id/totalqtyTraded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lineView3"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="8dp"
                        android:textSize="14sp"
                        android:text="@string/total_goods"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/totalqtyTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/lineView3"
                        android:layout_marginStart="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"

                        android:layout_toEndOf="@+id/totalqtyTraded"/>
                    <View
                        android:layout_width="match_parent"
                        android:id="@+id/lineView4"
                        android:layout_marginTop="10dp"
                        android:layout_height="1dp"
                        android:layout_marginEnd="5dp"
                        android:layout_below="@+id/totalqtyTraded"
                        android:background="@color/Orange">

                    </View>


                    <TextView
                        android:id="@+id/title_District"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/lineView4"
                        android:layout_marginStart="8dp"
                        android:textSize="14sp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/copyright"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/title_District"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="14sp"
                        android:layout_marginTop="72dp"
                        android:textColor="@color/white" />

                </RelativeLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>



    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <!--com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/main_nav_menu" />-->
</androidx.drawerlayout.widget.DrawerLayout>